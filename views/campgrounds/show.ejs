<% include ../partials/header.ejs %>

<div class = "container">
	<div class = "row">
		<div class ="col-md-3">
			<div class = "lead">Campoholics</div>
			<div class = "list-group">
				<div class = "list-group-item active">Info 1</div>
				<div class = "list-group-item">Info 2</div>
				<div class = "list-group-item">Info 3</div>
			</div>
		</div>
		<div class = "col-md-9">
			<h1><%= campground.name %></h1>
			<div class = "thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.Description %></p>
                </div>
			</div>

			<div class = "well">
				<div class = "text-right">
					<a href = "/campgrounds/<%=campground._id%>/comments/new" class ="btn btn-md btn-primary">Leave a comments</a>
				</div>
				<hr>
				<div class = "row">
					<div class = "col-md-12">
						<% campground.comments.forEach(function(comment){ %>
						<strong><%=comment.author%>	</strong>
						<span class = "pull-right">10 Days ago</span>
						<p>	<%=comment.text %> </p>
						<% }) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div>
<a href ="/campgrounds">Go Back</a> 
</div>
<% include ../partials/footer.ejs %>